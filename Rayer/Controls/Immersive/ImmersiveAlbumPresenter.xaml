<UserControl
    x:Class="Rayer.Controls.Immersive.ImmersiveAlbumPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Rayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Rayer.Controls.Immersive"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DataContext="{d:DesignInstance local:ImmersiveAlbumPresenter,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="802"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <Grid>
        <controls:AudioFrame Width="{Binding Width, ElementName=root}" Height="{Binding Height, ElementName=root}" />
    </Grid>
</UserControl>