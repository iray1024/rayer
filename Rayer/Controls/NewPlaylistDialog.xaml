<ui:ContentDialog
    x:Class="Rayer.Controls.NewPlaylistDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Rayer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:ContentDialog.Style>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="ui:ContentDialog" />
    </ui:ContentDialog.Style>
    <Grid>
        <ui:TextBox
            x:Name="PlaylistName"
            Width="200"
            Height="35"
            PlaceholderText="请输入歌单名称" />
    </Grid>
</ui:ContentDialog>